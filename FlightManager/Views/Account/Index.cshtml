@model UserViewModel
@{ 
    ViewData["Title"] = "Users";
}
<div class="row">
    <div class="col-3">
        <partial name="_AccountNavigation"/>
    </div>
    <div class="col-9">
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-controller="Account" asp-action="Edit" method="post">
        <div class="form-group">
        <input asp-for="Id" class="form-control" readonly hidden/>
        </div>
        <div class="form-group">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" class="form-control" readonly/>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" readonly/>
        </div>
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control" />
        </div>
            <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="EGN"></label>
            <input asp-for="EGN" class="form-control" readonly/>
       </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

