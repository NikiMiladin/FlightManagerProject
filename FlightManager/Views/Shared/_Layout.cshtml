<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - FlightManager</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
    <script src="js/jquery-2.1.4.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script defer src="~/lib/font-awesome/js/all.min.js"></script>
    <style>
        #MintMenu {
            background-color: #B00;
            border-color: #B00;
        }

            #MintMenu ul li a {
                color: #ffffff;
            }

            #MintMenu ul li:hover {
                background-color: #000;
            }
    </style>
</head>
<body>
    <header>
    <nav class="navbar navbar-default navbar-fixed-top" id="MintMenu">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" style="background-color: #000">

                    <span class="navbar-toggler-icon" style="        background-color: #ffffff"></span>
                  

                </button>
                <a class="navbar-brand" style="        color: #ffffff" href="#">Flight Manager</a>
            

              <div class="collapse navbar-collapse" id="MainNavBar">
                <ul class="nav navbar-nav navbar-right">

                    <li class="active"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class=" nav-item"> <a class="nav-link text-dark" asp-area="" asp-controller="Flights" asp-action="Index">Flights</a></li>
                    <li class=" nav-item">
                        <div class="nav-item dropdown">
                            <a class="nav-link text-dark dropdown-toggle" href="#" id="adminDropdownToggle"
                               data-toggle="dropdown"
                               aria-haspopup="true"
                               aria-expanded="false">Admin</a>
                            <div class="dropdown-menu" aria-labelledby="adminDropdownToggle">
                                <a class="dropdown-item text-dark"
                                   asp-area=""
                                   asp-controller="FlightsAdmin"
                                   asp-action="Index">
                                    Flights
                                </a>
                                <a class="dropdown-item text-dark"
                                   asp-area=""
                                   asp-controller="User"
                                   asp-action="Index">
                                    Users
                                </a>

                            </div>
                        </div>
                    </li>
                    <li class=" nav-item">
                        <div class="nav-item dropdown">
                            <a class="nav-link text-dark dropdown-toggle" href="#" id="adminDropdownToggle"
                               data-toggle="dropdown"
                               aria-haspopup="true"
                               aria-expanded="false">User</a>
                            <div class="dropdown-menu" aria-labelledby="adminDropdownToggle">
                                <a class=" dropdown-item-text-dark"
                                   asp-area=""
                                   asp-controller="Flights"
                                   asp-action="List">
                                    Flights
                                </a>
                            </div>
                        </div>
                    </li>
                    <li class=" nav-item">
                        <div>
                             @await Html.PartialAsync("_LoginPartial")
                        </div>
                    </li>
                </ul>
            </div>
           </div>
        </div>
    </nav>
  </header>


    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
