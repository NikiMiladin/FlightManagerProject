@model ReservationsViewModel
<div class="container">
    @using (Html.BeginForm("Add", "Reservations", FormMethod.Post,
new { @class = "" }))
    {
        <div class="form-group">
            @Html.LabelFor(model => model.Email, "Email")
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { placeholder = "Email", @class = "form-control" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PassengersCount, "Number of passengers")
            @Html.EditorFor(model => model.PassengersCount, new { htmlAttributes = new { placeholder = "Number of passengers", @class = "form-control" } })
        </div>
        <input type="submit" value="Save" class="btn btn-primary" />
    }
</div>